{
    "Comment": "A description of my state machine",
    "StartAt": "Elección",
    "States": {
        "Elección": {
            "Type": "Choice",
            "Choices": [
                {
                    "Next": "DynamoDB UpdateItem",
                    "Condition": "{% $['detail-type'] = 'ProductoAgregado' %}"
                }
            ]
        },
        "DynamoDB UpdateItem": {
            "Type": "Task",
            "Resource": "arn:aws:states:::dynamodb:updateItem",
            "Arguments": {
                "TableName": "DB_Clientes",
                "Key": {
                    "user_id": {
                        "S": "{% 'USER#' & $userId %}"
                    },
                    "entity_type": {
                        "S": "CART"
                    }
                },
                "UpdateExpression": "SET items.#id = :attrs, updatedAt = :fecha, expiracion = :ttl",
                "ExpressionAttributeNames": {
                    "#id": "{% $itemId %}"
                },
                "ExpressionAttributeValues": {
                    ":attrs": {
                        "M": {
                            "nombre": {
                                "S": "{% $producto.nombre %}"
                            },
                            "precio": {
                                "N": "{% $string($producto.precio) %}"
                            },
                            "cantidad": {
                                "N": "{% $string($producto.cantidad) %}"
                            },
                            "opciones": {
                                "S": "{% $join($producto.opciones, ', ') %}"
                            }
                        }
                    },
                    ":fecha": {
                        "S": "{% $now() %}"
                    },
                    ":ttl": {
                        "N": "{% $string($floor(($millis() + 86400000) / 1000)) %}"
                    }
                }
            },
            "End": true
        }
    },
    "QueryLanguage": "JSONata"
}